<h1>Edit: <%= @post.title %></h1>
<!-- we can create a partial for the form and use it everywhere -->
<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %> <br/><br/>

<%= f.label :body%> <br>
<%= f.text_area :body %> <br/><br/>


<%= f.select :category_id, Category.all.collect { |c| [c.name, c.id] } %> <br/><br/>

<%= f.submit "Update Post" %>

<%= link_to "Go Back", post_path, class: "btn btn-primary" %>

<% end %>
