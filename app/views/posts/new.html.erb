<h1>Add a New Post</h1>

<%= form_for @post do |f| %>

<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :body %>
  <%= f.text_area :body %>
</p>

<p>
  <%= f.select :category_id, Category.all.collect { |c| [c.name, c.id] }, {:include_blank => "Select One"} %>
</p>

<p>
  <%= f.submit "Create Post" %>
</p>

<% end %>
