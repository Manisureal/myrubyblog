<%= flash[:notice] %>
<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<small><%= @post.created_at.strftime("%A, %d %b %Y %l:%M %p") %></small><br/><br/>
<p>Category: <%= link_to @post.category.name, @category_posts %></p>
<%= link_to "Edit this Post", edit_post_path %>
<%= link_to "Delete Post", @post, data: { confirm: "Are you sure you want to delete?"}, :method => :delete %>
<%= link_to "Back", posts_path %>
